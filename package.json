{
  "name": "lap-times-tracker",
  "version": "1.0.0",
  "description": "A serverless application to track and display lap times",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "deploy": "terraform apply",
    "build": "npm run build:process-data && npm run build:serve-data",
    "build:process-data": "zip -j process_data_lambda.zip process_data.js",
    "build:serve-data": "zip -j serve_data_lambda.zip app.js",
    "test": "jest"
  },
  "keywords": [
    "lambda",
    "serverless",
    "aws",
    "lap times"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.x.x",
    "@aws-sdk/client-s3": "^3.x.x",
    "@aws-sdk/util-dynamodb": "^3.x.x",
    "aws-sdk": "^2.1691.0",
    "chart.js": "^4.4.4",
    "express": "^4.21.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@testing-library/jest-dom": "^5.16.5",
    "babel-jest": "^29.7.0",
    "d3": "^7.9.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "public/**/*.js",
      "*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
